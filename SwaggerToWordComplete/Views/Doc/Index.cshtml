@{
    Layout = null;
}
<!doctype html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8">
    <title> API</title>
    <style>
        /* (کپی همان CSS شما) */
        body {
            font-family: Tahoma, sans-serif;
            background: #f0f2f5;
            padding: 40px;
        }

        .tabs {
            width: 900px;
            margin: auto;
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.1);
            padding: 0;
            overflow: hidden;
        }

        .tab-buttons {
            display: flex;
            background: #e9ecef;
            border-bottom: 1px solid #ccc;
        }

            .tab-buttons button {
                flex: 1;
                padding: 14px;
                background: none;
                border: none;
                cursor: pointer;
                font-size: 15px;
                font-weight: bold;
                transition: 0.3s;
            }

                .tab-buttons button.active {
                    background: #fff;
                    border-bottom: 3px solid #007bff;
                    color: #007bff;
                }

        .tab {
            display: none;
            padding: 25px 30px;
        }

            .tab.active {
                display: block;
            }

        label {
            display: block;
            margin-top: 10px;
            font-weight: bold;
            color: #333;
        }

        input, textarea, select {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 6px;
            margin-bottom: 10px;
        }

        .submit-area {
            padding: 25px;
            border-top: 1px solid #ddd;
            text-align: center;
        }

        button.submit {
            background: #007bff;
            color: #fff;
            padding: 14px 20px;
            font-size: 18px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            width: 70%;
            transition: 0.3s;
        }

            button.submit:hover {
                background: #0056b3;
            }
    </style>
</head>
<body>
    @if (TempData["Error"] != null)
    {
        <div style="max-width:900px;margin:auto;color:#b71c1c;background:#ffecec;padding:12px;border-radius:6px">@TempData["Error"]</div>
    }
    
        <form method="post" action="/Doc/Generate" enctype="multipart/form-data">

        <div class="tabs">
            <div class="tab-buttons">
                <button type="button" class="active" onclick="openTab(0)">File</button>
                <button type="button" onclick="openTab(1)">Metadata</button>
                <button type="button" onclick="openTab(2)">Setting Word</button>
                <button type="button" onclick="openTab(3)">Font / RTL</button>
                <button type="button" onclick="openTab(4)">Advance Setting</button>
            </div>

            <div class="tab active">
                <label> Swagger (JSON)</label>
                <input type="file" name="Swagger" required>

                <label>Change Log</label>
                <textarea name="Changelog" rows="4">[]</textarea>

               

                <label><input type="checkbox" name="IncludeExamples" value="true" onclick="toggleAuthBox()"> IncludeExamples</label>


                <!-- AuthRequired: hidden + checkbox -->
                <input type="hidden" name="AuthRequired" value="false" />
                <label>
                    <input type="checkbox" name="AuthRequired" id="AuthRequired" value="false" onclick="toggleAuthBox()" />
                    auth required?
                </label>

                <div id="authBox" style="display:none;">

                    <label>Name of Authorization</label>
                    <input name="AuthHeader" value="Authorization">


                    <label>Default value</label>
                    <input name="AuthValue" value="Bearer {TOKEN}">
                </div>
            </div>

            <div class="tab">
                <label> (Author)</label>
                <input name="Author">

                <label> (For)</label>
                <input name="For">

                <label>intro </label>
                <textarea name="Intro" rows="4"></textarea>

                <label>sharedResponseModel</label>
                <textarea name="SharedResponseModel" rows="4"></textarea>

                <label>sharedErrors </label>
                <textarea name="SharedErrors" rows="4"></textarea>

                <label>Filter  methods</label>
                <input name="Methods">
            </div>

            <div class="tab">
                <label>Size Heading 1</label>
                <input type="number" name="H1" value="18">

                <label>Size Heading 2</label>
                <input type="number" name="H2" value="16">

                <label>Size Heading 3</label>
                <input type="number" name="H3" value="14">

                <label>Size Content normal</label>
                <input type="number" name="BodySize" value="12">

                <label>Color Heading</label>
                <input type="color" name="HeadColor" value="#000000">
            </div>

            <div class="tab">
                <label>Font Type</label>
                <select name="Font">
                    <option value="Tahoma">Tahoma</option>
                    <option value="B Nazanin">B Nazanin</option>
                
                    <option value="IRANSans">IRANSans</option>
                    <option value="Calibri">Calibri</option>
                </select>

                <label>Direction (RTL)</label>
                <select name="Rtl">
                    <option value="rtl">RTL </option>
                    <option value="ltr">LTR </option>
                </select>

                <label>title </label>
                <input name="Title" value="API Documentation">
                <label> Title all</label>
                <input name="Title_all" value="اطلاعات کلی">

                <label>Title intro</label>
                <input name="Intro" value="مقدمه مستند">

                <label>Title sharedResponseModel</label>
                <input name="SharedResponseModel" value="دیتا مدل خروجی">

                <label>Title sharedErrors</label>
                <input name="SharedErrors" value="کد خطاهای">

                <label>Title indexTitle</label>
                <input name="IndexTitle" value="فهرست متدها (Index)">

                <label>Title changelogTitle</label>
                <input name="ChangelogTitle" value="لیست تغییرات (Change Log)">

                <label>Title TableOfContents</label>
                <input name="TitleTableOfContents" value="فهرست مطالب">


                <label>Title Intro</label>
                <input name="TitleIntro" value="مقدمه مطالب">


                <label>Title SharedResponseModel</label>
                <input name="TitleSharedResponseModel" value="مدل خروجی مشترک">


                <label>Title SharedErrors</label>
                <input name="TitleSharedErrors" value="مدل خروجی خطا">
            </div>

            <div class="tab">
                <label>Top margin (px)</label>
                <input name="MTop" value="720">

                <label>Bottom margin (px)</label>
                <input name="MBottom" value="720">

                <label>Left margin (px)</label>
                <input name="MLeft" value="720">

                <label>Right margin (px)</label>
                <input name="MRight" value="720">

                <label>borderSize </label>
                <input name="BorderSize" value="8">

                <label>borderColor </label>
                <input type="color" name="BorderColor" value="#2B579A">

        
                <label><input type="checkbox" name="Toc" value="true" onclick="toggleAuthBox()"> Add a Table of Contents (TOC)</label>


                <label><input type="checkbox" name="PageNumber" value="true" onclick="toggleAuthBox()">  The page number is active</label>

            </div>

            <div class="submit-area">
                <button class="submit" type="submit"> Generate and download DOCX </button>
            </div>
        </div>
    </form>

    <script>
        function openTab(index) {
            document.querySelectorAll('.tab').forEach((tab,i)=>{ tab.classList.toggle('active', i === index); });
            document.querySelectorAll('.tab-buttons button').forEach((btn,i)=>{ btn.classList.toggle('active', i === index); });
        }

        function toggleAuthBox(){
            let chk = document.querySelector("input[name = 'AuthRequired']");
            document.getElementById('authBox').style.display = chk.checked ? 'block' : 'none';
        }
    </script>
</body>
</html>
